{
  "name": "@plt/pfe-ree-node",
  "version": "1.5.1",
  "main": "./build/index.js",
  "types": "./build.index.d.ts",
  "description": "Server backend for PFE recipe execution engine",
  "author": "Markus Graube <markus.graube@tu-dresden.de>",
  "repository": "svn@dev.plt.et.tu-dresden.de:modulare-automation/pfe-ree-node.git",
  "homepage": "https://dev.plt.et.tu-dresden.de/modulare-automation/pfe-ree-node",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node ./src/index.ts",
    "start-dist": "node ./build/index.js",
    "test": "nyc mocha -r ts-node/register test/**/*.ts",
    "typedoc": "typedoc --mode file --module commonjs --out typedoc/ --target ES6 --excludePrivate --readme none src/",
    "apidoc": "apidoc -i src/server/ -o apidoc",
    "build": "rm -rf build/ && tsc",
    "build-all": "npm run build && npm run apidoc && npm run ui",
    "docker": "docker build --add-host=registry.plt.et.tu-dresden.de:10.2.52.10 --add-host=registry.npmjs.org:104.16.24.35 -t registry.plt.et.tu-dresden.de/pfe-ree-node:$npm_package_version .",
    "docker-pi": "docker build --add-host=registry.plt.et.tu-dresden.de:10.2.52.10 -t registry.plt.et.tu-dresden.de/pfe-ree-node:$npm_package_version-arm -f Dockerfile.arm .",
    "docker-deploy": "docker push registry.plt.et.tu-dresden.de/pfe-ree-node:$npm_package_version"
  },
  "bin": {
    "pfe-ree-node": "./bin/pfe-ree-node"
  },
  "publishConfig": {
    "registry": "https://registry.plt.et.tu-dresden.de:4873"
  },
  "config": {
    "docker": {
      "imageName": "registry.plt.et.tu-dresden.de/pfe-ree-node"
    }
  },
  "files": [
    "build",
    "assets"
  ],
  "dependencies": {
    "@plt/pfe-ree-interface": "^1.17.1",
    "body-parser": "^1.18.3",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "cors": "^2.8.5",
    "expr-eval": "^1.2.2",
    "express": "^4.16.4",
    "express-async-handler": "^1.1.4",
    "multer": "^1.4.1",
    "node-opcua": "^0.5.6",
    "node-opcua-client": "^0.5.6",
    "request": "^2.88.0",
    "typescript-logging": "^0.6.3",
    "uuid": "^3.3.2",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.18",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.16",
    "nyc": "^13.1.0",
    "strict-event-emitter-types": "^2.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.1",
    "typedoc-plantuml": "^1.4.1",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
