{
  "version": "0.1.0",
  "name": "Media preparation for most simple medium",
  "author": "Markus Graube <markus.graube@tu-dresden.de>",
  "initial_step": "S1.AddWater",
  "steps": [
    {
      "name": "S1.AddWater",
      "operations": [
        {
          "service": "FeedWater",
          "command": "start",
          "parameter": [
            {
              "name": "TargetVolume",
              "value": 4000
            }
          ]
        }
      ],
      "transitions": [
        {
          "next_step": "S2.AddPowder",
          "condition": {
            "type": "state",
            "service": "FeedWater",
            "state": "completed"
          }
        }
      ]
    },
    {
      "name": "S2.AddPowder",
      "operations": [
        {
          "service": "FeedPowder",
          "command": "start",
          "parameter": [
            {
              "name": "FeedMass",
              "value": 143
            },
            {
              "name": "FeedDuration",
              "value": 60
            }
          ]
        },
        {
          "service": "Stirring",
          "command": "start",
          "parameter": [
            {
              "name": "StirringRotationSpeed",
              "value": 400
            },
            {
              "name": "StirringDuration",
              "value": 0
            }
          ]
        }
      ],
      "transitions": [
        {
          "next_step": "S3.pH7",
          "condition": {
            "type": "and",
            "conditions": [
              {
                "type": "time",
                "duration": 1500
              },
              {
                "type": "state",
                "service": "FeedPowder",
                "state": "completed"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "S3.pH7",
      "operations": [
        {
          "service": "pHAdjustment",
          "command": "start",
          "parameter": [
            {
              "name": "PumpFlowRate",
              "value": 11
            },
            {
              "name": "TargetVolume",
              "value": 11
            },
            {
              "name": "pHValue",
              "value": 4.5
            }
          ]
        }
      ],
      "transitions": [
        {
          "next_step": "S4.stopStirr",
          "condition": {
            "type": "state",
            "service": "pHAdjustment",
            "state": "completed"
          }
        }
      ]
    },
    {
      "name": "S4.stopStirr",
      "operations": [
        {
          "service": "Stirring",
          "command": "complete"
        }
      ],
      "transitions": [
        {
          "next_step": "S4.stopStirrIdle",
          "condition": {
            "type": "state",
            "service": "Stirring",
            "state": "completed"
          }
        }
      ]
    },
    {
      "name": "S4.stopStirrIdle",
      "operations": [
        {
          "service": "Stirring",
          "command": "reset"
        }
      ],
      "transitions": [
        {
          "next_step": "S5.FinalVolume",
          "condition": {
            "type": "state",
            "service": "Stirring",
            "state": "idle"
          }
        }
      ]
    },
    {
      "name": "S5.FinalVolume",
      "operations": [
        {
          "service": "FeedWater",
          "command": "start",
          "parameter": [
            {
              "name": "TargetVolume",
              "value": 5000
            }
          ]
        }
      ],
      "transitions": [
        {
          "next_step": "finished",
          "condition": {
            "type": "state",
            "service": "FeedWater",
            "state": "completed"
          }
        }
      ]
    }
  ]
}