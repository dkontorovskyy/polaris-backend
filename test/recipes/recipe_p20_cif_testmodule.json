{
  "version": "1.0",
  "name": "Simples Testrezept nur für Temperiermodul von Huber",
  "author": "Markus Graube",
  "modules": {
    "CIF": {
      "endpoint": "opc.tcp://10.6.51.200",
      "name": "CIF Testmodul",
      "services": {
        "Dose": {
          "name": "Dosieren",
          "command": "ns=2;s=MyLevel",
          "status": "ns=2;s=MyLevel",
          "strategy": {
            "nodeid": "ns=2;s=MyLevel",
            "value": 1
          },
          "parameter": {
            "volume": "ns=2;s=MyLevel"
          }
        }
      }
    }
  },
  "initial_step": "S1",
  "steps": {
    "S1": {
      "name": "Heizen",
      "operations": [
        {
          "module": "M1",
          "service": "Dose",
          "command": "start",
          "parameter": {
            "volume": 0.5
          }
        }
      ],
      "transitions": [
        {
          "next_step": "S2",
          "condition": [
            {
              "module": "M1",
              "service": "Dose",
              "state": "completed"
            }
          ]
        }
      ]
    },
    "S2": {
      "name": "Abkühlen",
      "operations": [
        {
          "module": "M1",
          "service": "Temper",
          "command": "start",
          "parameter": {
            "temperature": "50°C"
          }
        }
      ],
      "transitions": [
        {
          "next_step": "finished",
          "condition": [
            {
              "time": "15min"
            }
          ]
        }
      ]
    }
  }
}
